{{#each this}}
<div class="modal" id="modal-{{@index}}">
    <div class="modal-content">
        <div class="modal-header">
            <h4>{{header}}</h4><span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <p> {{{body}}} </p>
        </div>
    </div>
</div>
{{/each}}