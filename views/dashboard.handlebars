<section>
    <div class="form-container">
    
        <div class="grid-container">
            <div class="item1">
                <h4>Submit Your Ride</h4>
            </div>
            <div class="item4">
                <form class="route-form">
                    <div>
                        <label for="route-name">CHOOSE A ROUTE </label>
                        <select required name="route-name" id="route-name">
                            <option value="" disabled selected>Routes...</option>
                            {{#each routes.routes as |routes|}}
                            <option value="{{routes.id}}">{{routes.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div>
                        <label for="route-date">DATE COMPLETED</label>
                        {{!-- Set the min and max for Series Dates --}}
                        <input type="date" min="today" max="2023-11-30" id="route-date" required>
                    </div>
                    <div>
                        <label for="ride-time">RIDE TIME: HH:MM</label>
                        <input type="text" class="html-duration-picker" id="ride-time"  placeholder="00:00" required>
                    </div>

                    <div>
                        <label for="ride-link">STRAVA ACTIVITY LINK</label>
                        <input type="text" id="ride-link" placeholder="https://www.strava.com/activities/#" required>
                    </div>
