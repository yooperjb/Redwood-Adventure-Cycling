<section>
    <h2>Dashboard</h2>
    
    <div class="form-container">
       
        <div class="grid-container">
            <div class="item1">
                <h3>Submit Your Ride</h3>
            </div>
            <div class="item4">
                <form class="route-form">
                    <div>
                        <label for="route-name">Choose a route: </label>
                        <select name="route-name" id="route-name">
                            <option value=""></option>
                            {{#each routes.routes as |routes|}}
                            <option value="{{routes.id}}">{{routes.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div>
                        <label for="route-date">Date Completed:</label>
                        {{!-- Set the min and max for Series Dates --}}
                        <input type="date" min="today" max="2023-11-30" id="route-date">
                    </div>
                    <div>
                        <label for="ride-time">Ride Time: HH:MM</label>
                        <input type="text" class="html-duration-picker" id="ride-time" value="00:00">
                    </div>

                    <div>
                        <label for="ride-link">Link to Strava activity:</label>
                        <input type="text" id="ride-link" />
                    </div>
