{{!-- User Completed Routes Section --}}
<section>
    {{#if userRoutes.userRoutes }}
    <div class="routes-container">
        <h3 class="completed" align="center">Completed Routes</h3><br>
        {{#each userRoutes.userRoutes as |userRoutes|}}
        <div class="grid-container">
            <div class="item2">
                <h4>{{userRoutes.route.name}}</h4>
                <div class="grid-container-completed">
                    <div class="completed-data">Date Completed:</div>
                    <div class="completed-data"> {{userRoutes.date_completed}}</div>
                    <div class="completed-data">Ride time:</div>
                    <div class="completed-data"> {{userRoutes.ride_time}}</div>
                    <div class="completed-data">Points:</div>
                    <div class="completed-data">{{userRoutes.route.points}}</div>
                    <div class="completed-data">Approved:</div>
                    <div class="completed-data">{{#if userRoutes.approved }}
                        Yes
                        {{else}}
                        No
                        {{/if}}</div>
                </div>
            </div>
            <div class="item3">
                <img class="routes-image" src="https://ridewithgps.com/routes/full/{{userRoutes.route.id}}.png" alt="Map of {{userRoutes.route.name}}" />
            </div>
        </div>
        <br><br>
        {{/each}}
        {{/if}}
</section>

